{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<div class="text-center">
		<h1 class="pt-5">CanSurvive</h1>
	</div>
	<div class="container">
		<div>
			<form class="form-group mt-5 w-25 m-auto d-flex flex-column" action="{{ path('app_login') }}" method="post">
				<label class="d-none" for="username">Email</label>
				<input type="text" id="username" name="_username" placeholder="Email" value="{{ last_username }}" class="bg-primary border border-secondary text-secondary p-2">

				<label class="d-none" for="password">Password:</label>
				<input type="password" id="password" placeholder="Mot de passe" name="_password" class=" mt-3 bg-primary border border-secondary text-secondary p-2">
				<input
				type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				{# If you want to control the URL the user is redirected to on success
																		        <input type="hidden" name="_target_path" value="/account"> #}

				<button class="mt-3 btn btn-primary border border-secondary text-secondary rounded-0" type="submit">Connexion</button>
				<a class="mt-2 btn btn-primary text-secondary opacity-75" href="{{ path('app_register') }}">S'inscrire</a>
			</form>
		</div>
		
	</div>
	{% block navbar %}{% endblock %}
{% endblock %}
