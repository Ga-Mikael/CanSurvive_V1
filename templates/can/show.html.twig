{% block title %}Can{% endblock %}

{% block body %}
    <h1>Can</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ can.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ can.name }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ can.capacity }}</td>
